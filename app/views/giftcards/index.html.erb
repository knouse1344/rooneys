<div id="giftcards">

	<div id="menu_top"> 
		<div class="about_banner"> </div>
	</div>

	<div id="content_mid">
		<div id="signup">
			<h1>Sign up</h1>
			<%= form_for(@gift) do |f| %>

			  <%= f.label :name %>
			  <%= f.text_field :name, class: "input" %>

			  <%= f.label :email %>
			  <%= f.text_field :email, class: "input"  %>

			  <%= f.label :phone %>
			  <%= f.text_field :phone, class: "input"  %>

			  <%= f.label :address %>
			  <%= f.text_field :address, class: "input"  %>

			  <%= f.label :city %>
			  <%= f.text_field :city, class: "input"  %>

			  <%= f.label :state %>
			  <%= f.text_field :state, class: "input"  %>

			  <%= f.label :zip %>
			  <%= f.text_field :zip, class: "input"  %>

			  <%= f.label :type %>
			  <%= f.text_field :type, class: "input"  %>

			  <%= f.label :cardnum %>
			  <%= f.text_field :cardnum, class: "input"  %>

			  <%= f.label :amount %>
			  <%= f.text_field :amount, class: "input"  %>

			  <%= f.label :expiration %>
			  <%= f.text_field :expiration, class: "input"  %>

			  <%= f.submit "Purchase", class: "submitbtn" %>
			<% end %>
		</div>

	</div>

	<div id="content_bot"> </div>

</div>