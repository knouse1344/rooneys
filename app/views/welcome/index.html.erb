<div id="indexpage" style="margin-top: 120px;">
    <div class="nivo_box">
        <div class="slider-wrapper theme-dark">
            <div id="slider" class="nivoSlider">
                <img src="/assets/slider_01.jpg" data-thumb="/assets/slider_01.jpg" alt="" />
                <img src="/assets/slider_02.jpg" data-thumb="/assets/slider_02.jpg" alt="" />
                <img src="/assets/slider_03.jpg" data-thumb="/assets/slider_03.jpg" alt="" />
                <img src="/assets/slider_04.jpg" data-thumb="/assets/slider_04.jpg" alt="" />
                <img src="/assets/slider_05.jpg" data-thumb="/assets/slider_05.jpg" alt="" />
                <img src="/assets/slider_06.jpg" data-thumb="/assets/slider_06.jpg" alt="" />
            </div>
            <div id="htmlcaption" class="nivo-html-caption">
                <strong>This</strong> is an example of a <em>HTML</em> caption with <a href="#">a link</a>. 
            </div>
        </div>
    </div>

    <div id="slider_bg"> </div>

    <script type="text/javascript">
    	$(window).load(function() {
    	        $('#slider').nivoSlider({
    		        effect: 'random', // Specify sets like: 'fold,fade,sliceDown'
    		        slices: 10, // For slice animations
    		        animSpeed: 350, // Slide transition speed
    		        pauseTime: 5000, // How long each slide will show
    			});
    	    });

    </script>

    <div id="panel">
        <div class="horiz"> </div>
        <div class="hours">
            <span>Monday - Friday: 5:30pm - 10:00pm</span></br>
            <span>Saturday: 5:00pm - 10:00pm</span></br>
            Sunday: Closed
        </div>
        <div class="fooditems">

            <%= form_for(@user) do |f| %>
                  <div class="field">
                    <%= f.label :email, "Enter your email address below:", class: "label" %><br>
                    <%= f.text_field :email, class: "input" %>
                  </div>
                  <div class="actions">
                    <%= f.submit "Add Me!", class: "submit" %>
                  </div>
            <% end %>

        </div>
    </div>
</div>

